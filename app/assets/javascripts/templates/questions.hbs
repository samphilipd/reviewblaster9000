<div class="list-group">
{{#each question in controller}}
  <div class="list-group-item">
    <h4 class="list-group-item-heading">{{question.name}}</h4>
    <div class="list-group-item-text">
      <div class="prct-circles">
        {{!-- buttons go here! --}}
        <img class="prct-circle" src="/img/0_prct_grey.png" />
        <img class="prct-circle" src="/img/25_prct_grey.png" />
        <img class="prct-circle" src="/img/50_prct_grey.png" />
        <img class="prct-circle" src="/img/75_prct_grey.png" />
        <img class="prct-circle" src="/img/100_prct_grey.png" />
      </div>
    </div>
  </div>
{{else}}
  <div class="list-group-item">
    <h4 class="list-group-item-heading">No questions!</h4>
  </div>
{{/each}}
</div>
