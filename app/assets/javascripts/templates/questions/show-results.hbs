<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
  <div class="list-group">
  {{#each question in controller}}
    <div class="list-group-item">
      <h4 class="list-group-item-heading">{{question.name}}</h4>
      <div class="list-group-item-text">
          {{#if question.isRating}}
            {{#if question.hasPercentage}}
              <div class="progress">
                <div {{bind-attr class=":progress-bar question.ratedStatusClass"}} role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: {{unbound question.percentage}}%;">
                  <span>{{question.truncated_percentage}}%</span>
                </div>
             </div>
            {{else}}
            <div class="list-text">
              {{i18n no_ratings_for_question}}
            </div>
            {{/if}}
          {{else}} {{#if question.isPredicate}}
            {{#if question.hasPercentage}}
              <div class="list-text">
                {{question.truncated_percentage}}% {{i18n said_true}}.<br />
                {{question.truncated_inverse_percentage}}% {{i18n said_false}}.
              </div>
            {{else}}
            <div class="list-text">
              {{i18n no_ratings_for_question}}
            </div>
            {{/if}}
          {{else}} {{#if question.isFreeText}}
            {{#if question.hasAnswersArray}}
              <div class="list-text">
                <ol>
                  {{#each question.answers_array}}
                    <li>{{this}}</li>
                  {{/each}}
                </ol>
              </div>
            {{else}}
            <div class="list-text">
              {{i18n no_ratings_for_question}}
            </div>
            {{/if}}
          {{/if}}{{/if}}{{/if}}
      </div>
    </div>
  {{else}}
    <div class="list-group-item">
      <h4 class="list-group-item-heading">{{i18n no_questions}}!</h4>
    </div>
  {{/each}}
  <div class="summary">
    <h4>{{i18n responses}}: {{total_responses}}</h4>
  </div>
</div>
